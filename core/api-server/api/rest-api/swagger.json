    "components": {
        "requestBodies": {
            "pipeline": {
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/pipeline"
                        }
                    }
                },
                "description": "pipeline descriptor to be added to the store",
                "required": true
            }
        },
        "schemas": {
            "pipeline": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Unique identifier representing a specific pipeline",
                        "minLength": 1
                    },
                    "nodes": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/pipelineNode"
                        }
                    },
                    "flowInput": {
                        "type": "object",
                        "description": "input object"
                    },
                    "webhooks": {
                        "$ref": "#/components/schemas/webhooks"
                    },
                    "options": {
                        "$ref": "#/components/schemas/options"
                    },
                    "priority": {
                        "$ref": "#/components/schemas/priority"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "name",
                    "nodes"
                ]
            },
            "pipelineNode": {
                "id": "#/components/schemas/pipelineNode",
                "type": "object",
                "properties": {
                    "nodeName": {
                        "type": "string",
                        "description": "Unique identifier",
                        "minLength": 1
                    },
                    "algorithmName": {
                        "type": "string",
                        "description": "Unique identifier representing a specific function. e.g. \"Average\"",
                        "minLength": 1,
                        "enum": [
                            "green-alg",
                            "yellow-alg",
                            "black-alg",
                            "red-alg",
                            "eval-alg"
                        ]
                    },
                    "input": {
                        "type": "array",
                        "description": "extra input, in addition to the output from parent step.",
                        "default": []
                    },
                    "code": {
                        "type": "array"
                    }
                },
                "additionalProperties": true,
                "required": [
                    "nodeName",
                    "algorithmName"
                ]
            },
            "runStoredPipeline": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "batch",
                        "minLength": 1
                    },
                    "flowInput": {
                        "type": "object",
                        "description": "input object"
                    },
                    "webhooks": {
                        "$ref": "#/components/schemas/webhooks"
                    },
                    "options": {
                        "$ref": "#/components/schemas/options"
                    },
                    "priority": {
                        "$ref": "#/components/schemas/priority"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "name"
                ]
            },
            "updatePipeline": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1
                    },
                    "nodes": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/pipelineNode"
                        }
                    },
                    "flowInput": {
                        "type": "object",
                        "description": "input object"
                    },
                    "webhooks": {
                        "$ref": "#/components/schemas/webhooks"
                    },
                    "options": {
                        "$ref": "#/components/schemas/options"
                    },
                    "priority": {
                        "$ref": "#/components/schemas/priority"
                    }
                },
                "additionalProperties": false,
                "minProperties": 2,
                "required": [
                    "name"
                ]
            },
            "webhooks": {
                "id": "#/components/schemas/webhooks",
                "type": "object",
                "properties": {
                    "progress": {
                        "type": "string",
                        "format": "url",
                        "description": "url to activate upon progress"
                    },
                    "result": {
                        "type": "string",
                        "format": "url",
                        "description": "url to activate upon result"
                    }
                },
                "additionalProperties": false
            },
            "priority": {
                "id": "#/components/schemas/priority",
                "type": "integer",
                "minimum": 1,
                "maximum": 5
            },
            "options": {
                "id": "#/components/schemas/options",
                "type": "object",
                "properties": {
                    "batchTolerance": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 100
                    },
                    "progressVerbosityLevel": {
                        "type": "string",
                        "enum": [
                            "trace",
                            "debug",
                            "info",
                            "warn",
                            "error",
                            "critical"
                        ]
                    }
                },
                "description": "optional properties",
                "example": {
                    "batchTolerance": 60,
                    "progressVerbosityLevel": "info"
                }
            },
            "stopRequest": {
                "type": "object",
                "properties": {
                    "jobId": {
                        "type": "string",
                        "description": "Unique identifier representing pipeline execution"
                    },
                    "reason": {
                        "type": "string",
                        "default": "requested by user",
                        "description": "reason for stop pipeline"
                    }
                },
                "required": [
                    "jobId"
                ],
                "example": {
                    "jobId": "046b6c7f-0b8a-43b9-b35d-6489e6daee91",
                    "reason": "cancel now"
                }
            },
            "defaultResponse": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    }
                },
                "example": {
                    "message": "message"
                }
            },
            "Error": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            },
            "pipelineExecutionResult": {
                "type": "object",
                "properties": {
                    "result": {
                        "type": "object",
                        "description": "input object",
                        "properties": {}
                    }
                },
                "example": {
                    "result": "{}"
                }
            },
            "pipelineName": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    }
                },
                "required": [
                    "name"
                ]
            },
            "jobId": {
                "type": "object",
                "properties": {
                    "jobId": {
                        "type": "string",
                        "description": "Unique identifier representing pipeline execution"
                    }
                },
                "required": [
                    "jobId"
                ]
            },
            "pipelineResult": {
                "type": "object",
                "properties": {
                    "timestamp": {
                        "type": "string"
                    },
                    "jobId": {
                        "type": "string"
                    },
                    "data": {
                        "type": "object"
                    }
                }
            }
        }
    }
}