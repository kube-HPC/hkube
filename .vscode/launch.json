    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/bin/hkube",
            "args": [
                "minikube",
                "--init"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch pull",
            "program": "${workspaceFolder}/bin/hkube",
            "args": [
                "m",
                "-ac"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch kuberApi",
            "program": "${workspaceFolder}/minikube/kubernetes-api.js",
            "args": [
                "cloneWithNpm",
                "--dev"
            ]
        }
    ]
}